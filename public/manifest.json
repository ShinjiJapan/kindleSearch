{
  "manifest_version": 2,
  "version": "1.7",
  "name": "Kindle Search",
  "description": "kindle検索",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "https://www.amazon.co.jp/"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
